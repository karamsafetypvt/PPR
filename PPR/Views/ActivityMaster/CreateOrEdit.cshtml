@model PPRModel.Model.ActivityMasterModel
<style>
    .form-horizontal .controls {
        margin-left: 0px;
    }

    .form-horizontal .control-label {
        padding-top: 15px;
        width: 130px;
        text-align: center;
    }

    .select2-container {
        width: 52%;
    }
</style>
@if (Model != null)
{
    <div id="content-header">
        <div id="breadcrumb">
            @if (Model.ActivityID <= 0)
            {
                <a href="~/ActivityMaster/Activity" class="tip-bottom"><i class="icon-home"></i>Activity Master</a>
                <a href="~/ActivityMaster/Create">Add New Activity</a>
            }
            else
            {
                <a href="~/ActivityMaster/Activity" class="tip-bottom"><i class="icon-home"></i>Activity Master</a>
                <a href="Javascript:void(0)">Edit Activity</a>
            }
        </div>
        @if (Model.ActivityID <= 0)
        {
            <h1>Add New Activity</h1>
        }
        else
        {
            <h1>Edit Activity</h1>
        }

    </div>

    <div class="container-fluid content">
        <div class="row-fluid">

            <div class="span12">
                <div class="widget-box">
                    @if (Model.ActivityID <= 0)
                    {


                        <div class="widget-title">
                            <span class="icon">
                                <i class="icon-info-sign"></i>
                            </span>
                            <h5>Add</h5>
                        </div>
                    }
                    else
                    {
                        <div class="widget-title">
                            <span class="icon">
                                <i class="icon-info-sign"></i>
                            </span>
                            <h5>Edit</h5>
                        </div>
                    }

                    <div class="widget-content nopadding">
                        <div class="form-horizontal">
                            <table class="table table table-condensed ">
                                <thead>

                                </thead>
                                <tbody>
                                    <tr class="odd gradeX">
                                        <td>
                                            <label class="control-label">Activity Name</label>
                                            <div class="controls">
                                                @Html.TextBoxFor(m => m.ActivityName, new { @id = "ActivityName", @Placeholder = "Activity Name", @class = "form-control m-input" ,@maxlength="100"})
                                                @Html.HiddenFor(m => m.ActivityID)

                                            </div>
                                            @Html.ValidationMessageFor(m => m.ActivityName, "", new { @class = "m-form__help" })
                                        </td>
                                        <td>
                                            <label class="control-label">SubActivity</label>
                                            <div class="controls">
                                                @Html.DropDownListFor(m => m.SubActivity, Model._SubActivityList, new { @id = "ddlSubActivity", @class = "form-control m-input" })
                                            </div>

                                        </td>
                                        @*@Html.ValidationMessageFor(m => m.SubActivity, "", new { @class = "m-form__help" })*@
                                        <td>
                                            <label class="control-label">Nature</label>
                                            <div class="controls">
                                                @Html.DropDownListFor(m => m.Nature, Model._NatureList, new { @id = "ddlNature", @class = "form-control m-input" })

                                            </div>
                                            @*@Html.ValidationMessageFor(m => m.Nature, "", new { @class = "m-form__help" })*@
                                        </td>

                                    </tr>
                                    <tr class="odd gradeX">
                                        <td>
                                            <label class="control-label">ResourceReq</label>
                                            <div class="controls">
                                                @Html.TextBoxFor(m => m.ResourceReq, new { @id = "resourceRequest", @Placeholder = "Resource Req", @class = "form-control m-input" })

                                            </div>
                                            @Html.ValidationMessageFor(m => m.ResourceReq, "", new { @class = "m-form__help" })
                                        </td>
                                        <td>
                                            <label class="control-label">Status</label>
                                            <div class="controls">
                                                @Html.DropDownListFor(m => m.Status, Model._StatusList, new { @id = "ddltStatus", @class = "form-control m-input" })
                                            </div>
                                            @Html.ValidationMessageFor(m => m.Status, "", new { @class = "m-form__help" })
                                        </td>
                                        <td>
                                            <label class="control-label">Sequence No.</label>
                                            <div class="controls">
                                                @Html.TextBoxFor(m => m.SequenceNo, new { @id = "txtSequence", @class = "form-control m-input", @Placeholder = "Sequence No",
                                               @oninput = "this.value = this.value.replace(/[^0-9]/g, '');",
                                               @onkeypress = "return event.charCode >= 48 && event.charCode <= 57",@maxlength="4"
                                           })
                                            </div>
                                            @*@Html.ValidationMessageFor(m => m.Status, "", new { @class = "m-form__help" })*@
                                        </td>
                                    </tr>

                                </tbody>
                            </table>
                            <div class="form-actions" style="text-align: center;padding-left:0px">
                                <a href="~/ActivityMaster/Activity" class="btn btn-danger">Cancel</a>
                                <button type="button" class="btn btn-primary" onclick="Reset();">Reset</button>
                                @if (Model.ActivityID == 0)
                                {
                                    <button type="submit" class="btn btn-success">Save</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-info">Update</button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script type="text/javascript">
    function Reset() {
        $('.m-input').val('');
        $("#ddltStatus").val(0).select2();
        $("#ddlSubActivity").val(0).select2();
        $("#ddlNature").val(0).select2();
       

    }
</script>

